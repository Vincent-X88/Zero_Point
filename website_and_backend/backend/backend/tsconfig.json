{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": "./", // Allows importing from the root directory
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["src/**/*.ts", "*.ts"],
  "exclude": ["node_modules"]
}
